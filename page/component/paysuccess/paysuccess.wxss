/* page/component/paysuccess/paysuccess.wxss */

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #f5f5f5;
  height: 100%;
}

.top-bar {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  background-color: #fff;
  border-bottom: 1px solid #e5e5e5;
}



.back-btn {
  margin-right: 20rpx;
  font-size: 30rpx;
}

.success-title {
  margin-top: ½rem;
  text-align: center;
}

.title-text {
  color: #00cc66;
  font-size: 48rpx;
  font-weight: bold;
}

.order-details {
  margin-top: 2rem;
  display: flex;
  flex-direction: column;
}

.detail-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 1rem;
}

.detail-label {
  color: #666;
  font-size: 32rpx;
}

.detail-value {
  font-size: 32rpx;
  color: #333;
}

.highlight {
  color: #00cc66;
}

.view-order-btn {
  margin-top: 1rem;
  width: ¾rem;
  height: ¾rem;
  background-color: #00cc66;
  border-radius: 50%;
  font-size: 28rpx;
  color: #fff;
  text-align: center;
  line-height: ¾rem;
}

.action-bar {
  display: flex;
  justify-content: space-around;
  margin-top: 2rem;
}

.home-btn,
.continue-btn {
  width: ⅔rem;
  height: ⅔rem;
  background-color: #fff;
  border: 1px solid #00cc66;
  border-radius: 50%;
  font-size: 28rpx;
  color: #00cc66;
  text-align: center;
  line-height: ⅔rem;
}

.home-btn {
  margin-right: 1rem;
}